<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.att.kiwilauncher.view.VideoFullTest">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/video_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_bgvideo"
        android:orientation="horizontal"
        >

        <ImageView

            android:id="@+id/imgWeb_test"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_website"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Bỏ chế độ toàn màn hình"
            android:textSize="@dimen/_5sdp"/>

        <ImageButton
            android:id="@+id/imgExitFullTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/imgWeb"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_2sdp"
            android:background="@drawable/ic_nonefull"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/imgBack_Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/ic_backvideo"/>

        <ImageButton
            android:id="@+id/imgPlay_Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imgBack"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/ic_playvideo"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/imgPause_Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imgBack"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/ic_pause"/>

        <ImageButton
            android:id="@+id/imgNext_Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imgPlay"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/ic_nextvideo"/>

        <TextView
            android:id="@+id/tvTimeBegin_Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="00:00"/>

        <TextView
            android:id="@+id/tvTime_Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" / "/>


        <TextView
            android:id="@+id/tvTimeEnd_Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="03:35"/>

        <ImageButton
            android:id="@+id/imgVolumeOf_Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/ic_volumeoff"/>

        <ImageButton
            android:id="@+id/imgVolumeOn_Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/ic_volumeon"
            android:visibility="gone"/>

    </LinearLayout>
</RelativeLayout>
