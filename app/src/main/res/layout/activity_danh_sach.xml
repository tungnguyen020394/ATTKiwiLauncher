<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.att.kiwilauncher.DanhSach"
    android:background="@drawable/ic_bgmain">

    <RelativeLayout
        android:id="@+id/relay1_ds"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/relay13_ds"
            android:layout_width="@dimen/_86sdp"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/_17sdp">

            <ImageView
                android:id="@+id/img1_ds"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_kiwi"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relay12_ds"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/relay11_ds"
            android:layout_toRightOf="@+id/relay13_ds"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_6sdp"
            android:paddingTop="@dimen/_8sdp">

            <RelativeLayout
                android:id="@+id/relay121_ds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_text"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp">

                <TextView
                    android:id="@+id/text1_ds"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text=" Chào mừng hè Kiwi giảm giá đặc biệt 50% cho toàn bộ các box ! Chào mừng hè Kiwi giảm giá đặc biệt 50% cho toàn bộ các box ! Chào mừng hè Kiwi giảm giá đặc biệt 50% cho toàn bộ các box ! Chào mừng hè Kiwi giảm giá đặc biệt 50% cho toàn bộ các box ! "
                    android:textAllCaps="true"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relay11_ds"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relay111_ds"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/relay112_ds"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingTop="@dimen/_9sdp">

                <ImageView
                    android:id="@+id/img_lich_ds"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:padding="@dimen/_1sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_lich"/>

                <TextView
                    android:id="@+id/txt_duonglich_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_lich_ds"
                    android:padding="@dimen/_2sdp"
                    android:text="Thứ 7 , 10/6/2017    "
                    android:textAllCaps="true"
                    android:textSize="@dimen/_7sdp"/>

                <TextView
                    android:id="@+id/txt_amlich_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_duonglich_ds"
                    android:layout_toRightOf="@id/img_lich_ds"
                    android:paddingLeft="@dimen/_2sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="16/5 Đinh dậu "
                    android:textAllCaps="true"
                    android:textSize="@dimen/_6sdp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay112_ds"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/relay113_ds"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingTop="@dimen/_9sdp">

                <ImageView
                    android:id="@+id/img_thoitiet_ds"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_1sdp"
                    android:paddingRight="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_thoitiet"/>

                <TextView
                    android:id="@+id/txt_thanhpho_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_thoitiet_ds"
                    android:padding="@dimen/_2sdp"
                    android:singleLine="true"
                    android:text="Hà Nôi    "
                    android:textAllCaps="true"
                    android:textSize="@dimen/_7sdp"/>

                <TextView
                    android:id="@+id/txt_nhietdo_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_thanhpho_ds"
                    android:layout_toRightOf="@+id/img_thoitiet_ds"
                    android:paddingLeft="@dimen/_2sdp"
                    android:singleLine="true"
                    android:text="28 độ       "
                    android:textAllCaps="true"
                    android:textSize="@dimen/_6sdp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay113_ds"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingTop="@dimen/_9sdp">

                <ImageView
                    android:id="@+id/img_caidat_ds"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_1sdp"
                    android:paddingRight="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_caidat"/>

                <TextView
                    android:id="@+id/txt_caidat_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_caidat_ds"
                    android:padding="@dimen/_2sdp"
                    android:singleLine="true"
                    android:text="Cấu Hình      "
                    android:textAllCaps="true"
                    android:textSize="@dimen/_7sdp"/>

                <TextView
                    android:id="@+id/txt_kiwi_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_caidat_ds"
                    android:layout_toRightOf="@+id/img_caidat_ds"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/_2sdp"
                    android:text="KiwiBox       "
                    android:textAllCaps="true"
                    android:textSize="@dimen/_6sdp"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay2_ds"
        android:layout_below="@+id/relay1_ds"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_7sdp"
        android:paddingTop="@dimen/_2sdp"
        android:layout_height="@dimen/_25sdp">
        <ImageView
            android:id="@+id/bordercate_ds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bordercate_ds"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler1_ds"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay3_ds"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/relay2_ds"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler2_ds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay4_ds"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_below="@+id/relay3_ds"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_marginRight="@dimen/_17sdp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler4_ds"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/relay3"></RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay5_ds"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relay4_ds">

        <ImageView
            android:id="@+id/img_minus_ds"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_55sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_minus1"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_toLeftOf="@+id/img_plus_ds"
            android:layout_toRightOf="@+id/img_minus_ds"
            android:gravity="center">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler5_ds"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                ></android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_plus_ds"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_55sdp"
            android:layout_alignParentRight="true"
            android:scaleType="fitEnd"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:src="@drawable/ic_plus1"/>
    </RelativeLayout>

</RelativeLayout>
