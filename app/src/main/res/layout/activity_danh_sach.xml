<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.att.kiwilauncher.DanhSach"
    android:background="@drawable/ic_bgmain">
    <RelativeLayout
        android:id="@+id/relay1_ds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relay13_ds"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/img1_ds"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_kiwi"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relay12_ds"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_text">

                <TextView
                    android:id="@+id/text1_ds"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:layout_centerHorizontal="true"
                    android:text=" Chào mừng hè Kiwi giảm giá đặc biệt 50% cho toàn bộ các box ! Chào mừng hè Kiwi giảm giá đặc biệt 50% cho toàn bộ các box ! Chào mừng hè Kiwi giảm giá đặc biệt 50% cho toàn bộ các box ! Chào mừng hè Kiwi giảm giá đặc biệt 50% cho toàn bộ các box ! "
                    android:textAllCaps="true"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relay11_ds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relay111_ds"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/relay112_ds"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/img_lich_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_lich"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/txt_duonglich_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/img_lich_ds"
                    android:text="Thứ 7 , 10/6/2017    "
                    android:textAllCaps="true"
                    android:singleLine="true"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txt_amlich_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_duonglich_ds"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/img_lich_ds"
                    android:singleLine="true"
                    android:text="16/5 Đinh dậu "
                    android:textAllCaps="true"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay112_ds"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/relay113_ds"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/img_thoitiet_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_thoitiet"/>

                <TextView
                    android:id="@+id/txt_thanhpho_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_thoitiet_ds"
                    android:singleLine="true"
                    android:text="Hà Nôi    "
                    android:textAllCaps="true"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txt_nhietdo_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_thanhpho_ds"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/img_thoitiet_ds"
                    android:singleLine="true"
                    android:text="28 độ       "
                    android:textAllCaps="true"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay113_ds"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/img_caidat_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_caidat"/>

                <TextView
                    android:id="@+id/txt_caidat_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_caidat_ds"
                    android:text="Cấu Hình      "
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txt_kiwi_ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_caidat_ds"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/img_caidat_ds"
                    android:singleLine="true"
                    android:text="KiwiBox       "
                    android:textAllCaps="true"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay2_ds"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler1_ds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relay3_ds"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler2_ds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


    </RelativeLayout>

</RelativeLayout>
