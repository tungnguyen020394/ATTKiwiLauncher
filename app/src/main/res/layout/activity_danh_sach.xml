<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.att.kiwilauncher.DanhSach">

    <RelativeLayout
        android:id="@+id/relayds1"
        android:layout_width="944dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:id="@+id/imgds1"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_kiwi"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgds1"
            android:layout_toStartOf="@+id/relayds11"
            android:background="@drawable/border_text"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">
            <EditText
                android:id="@+id/edtxtds1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:selectAllOnFocus="true"
                android:focusable="false"
                android:textSize="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toStartOf="@+id/imgdsSearch" />

            <ImageView
                android:id="@+id/imgdsSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relayds11"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_lichds"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_lich"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/txt_duonglichds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_lichds"
                android:layout_marginTop="15dp"
                android:textAllCaps="true"
                android:text="THỨ 3 20/11/2017"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/txt_amlichds"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toEndOf="@id/img_lichds"
                android:layout_below="@id/txt_duonglichds"
                android:textAllCaps="true"
                android:textSize="10dp"
                android:text="20/03 BÍNH Dần " />

            <ImageView
                android:id="@+id/img_thoitietds"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/txt_duonglichds"
                android:src="@drawable/ic_mua"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/txt_thanhphods"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_thoitietds"
                android:text="Hà Nôi"
                android:textAllCaps="true"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/txt_nhietdods"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toEndOf="@+id/img_thoitietds"
                android:layout_below="@+id/txt_thanhphods"
                android:textAllCaps="true"
                android:textSize="10dp"
                android:text="15 độ C" />

            <ImageView
                android:id="@+id/img_caidatds"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/txt_thanhphods"
                android:src="@drawable/ic_caidat"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/txt_caidatds"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_caidatds"
                android:text="Cài Đặt"
                android:textAllCaps="true"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/txt_kiwids"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toEndOf="@+id/img_caidatds"
                android:layout_below="@+id/txt_caidatds"
                android:textAllCaps="true"
                android:textSize="10dp"
                android:text="" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayds2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_ds1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayds3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_ds2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayds4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_ds3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayds5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_ds4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>
